#!groovy

properties([
        [
                $class: 'GithubProjectProperty',
                displayName: 'Financial Remedy Notification service',
                projectUrlStr: 'https://github.com/hmcts/finrem-notification-service'
        ],
        pipelineTriggers([
                [$class: 'GitHubPushTrigger']
        ])
])

@Library("Infrastructure")

def type = "java"
def product = "fr"
def component = "ns"

List<LinkedHashMap<String, Object>> secrets = [
        secret("auth-provider-service-client-key", "AUTH_PROVIDER_SERVICE_CLIENT_KEY"),
        secret("uk-gov-notify-api-key", "UK_GOV_NOTIFY_API_KEY")
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}

withPipeline(type , product, component) {
    if (env.CHANGE_TITLE && !env.CHANGE_TITLE.startsWith('[PREVIEW]')) {
        enableDockerBuild()
        enableDeployToAKS()
    }

    loadVaultSecrets(secrets)
    setVaultName('finrem')

    after('checkout') {
        echo '${product}-${component} checked out'
    }

   // enableSlackNotifications(channel)

    before('smokeTest:prod') {
        error('Halting pipeline before prod stages')
    }
}